<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    tools:context=".profile.EditProfileActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/circle_button_back"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Profile"
        tools:ignore="MissingConstraints">
    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_circle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/page"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/nathan"
        tools:ignore="MissingConstraints">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/image_circle"
        android:text="Upload Foto"
        tools:ignore="MissingConstraints">
    </TextView>

    <LinearLayout
        android:id="@+id/edit_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image_circle"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Full Name"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/edit_text_fullname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:inputType="textPersonName"
            android:hint="Enter Your Full Name"
            android:textColorHint="@color/submaintxt"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Username"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:inputType="textPersonName"
            android:hint="Enter Your Username"
            android:textColorHint="@color/submaintxt"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Email"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:inputType="textEmailAddress"
            android:hint="example@example.com"
            android:textColorHint="@color/submaintxt"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Adress"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/edit_text_adress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:inputType="textPersonName"
            android:hint="Enter Your Adress"
            android:textColorHint="@color/submaintxt"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Phone Number"
            tools:ignore="MissingConstraints">
        </TextView>
        <EditText
            android:id="@+id/edit_text_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:background="@drawable/edittext_background"
            android:inputType="number"
            android:hint="Enter Your Number Phone"
            android:textColorHint="@color/submaintxt"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/profile_button_background"
        app:layout_constraintTop_toBottomOf="@id/edit_information"
        tools:ignore="MissingConstraints">
    </ImageView>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/edit_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="Save Profile"
        tools:ignore="MissingConstraints">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>